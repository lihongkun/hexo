<article class="post box is-radiusless">
    <div class="post-title">
      <h2 class="is-size-4"><%= page.title %></h2>
    </div>
     <div class="post-meta">
        <span class="post-time">日期&nbsp;:&nbsp;<%- date(page.date, "YYYY-MM-DD") %></span>
    </div>
    <div class="post-content content">
      <%- page.content %>
    </div>
    <div class="columns is-mobile post-meta">
        <div class="column  is-half has-text-left is-paddingless">
            <% if(page.next) { %>
              更老一篇&nbsp;:&nbsp;<a href="<%- url_for(page.next.path)%>"><%= page.next.title %></a>
            <% } else { %>
              没有了，已经是最后文章
            <%}%>
        </div>  
        <div class="column  is-half has-text-right is-paddingless">
            <% if(page.prev) { %>
              更新一篇&nbsp;:&nbsp;<a href="<%- url_for(page.prev.path)%>"><%= page.prev.title %></a>
            <% } else { %>
              没有了，已经是最新文章
            <%}%>
        </div>
        <div class="is-clearfix"></div>
    </div>
 </article>